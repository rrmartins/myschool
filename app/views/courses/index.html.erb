<p id="notice"><%= notice %></p>

<div class="hero-unit">
  <h1>Lista de Cursos</h1>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição Breve</th>
        <th>Ativo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.description[0..90]+"..." %></td>
          <td><%= course.status ? ":)" : ":(" %></td>
          <td><%= link_to 'Show', course, class: "btn" %></td>
          <td><%= link_to 'Editar', edit_course_path(course), class: "btn" %></td>
          <td><%= link_to 'Deletar', course, method: :delete, data: { confirm: 'Deseja deletar?' }, class: "btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Curso', new_course_path, class: "btn" %>
  <%= link_to 'root', root_path, class: "btn" %>
</div>