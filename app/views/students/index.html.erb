<p id="notice"><%= notice %></p>

<div class="hero-unit">
  <h1>Lista dos Alunos</h1>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Nome</th>
        <th>NÃºmero de Registro</th>
        <th>Ativo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.register_number %></td>
          <td><%= student.status ? ":)" : ":(" %></td>
          <td><%= link_to 'Show', student, class: "btn" %></td>
          <td><%= link_to 'Editar', edit_student_path(student), class: "btn" %></td>
          <td><%= link_to 'Deletar', student, method: :delete, data: { confirm: 'Deseja deletar?' }, class: "btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Aluno', new_student_path, class: "btn" %>
  <%= link_to 'root', root_path, class: "btn" %>
</div>
